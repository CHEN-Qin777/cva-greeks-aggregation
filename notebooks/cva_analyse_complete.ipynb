# %% Imports
import numpy as np
import matplotlib.pyplot as plt

np.random.seed(42)  # pour reproductibilité

# %% Définition des fonctions (extrait des fichiers)
def simuler_gbm(S0, mu, sigma, T, n_steps, n_paths):
    dt = T / n_steps
    traj = np.zeros((n_paths, n_steps+1))
    traj[:,0] = S0
    for t in range(1, n_steps+1):
        z = np.random.normal(size=n_paths)
        traj[:,t] = traj[:,t-1] * np.exp((mu - 0.5*sigma**2)*dt + sigma*np.sqrt(dt)*z)
    return traj

def exposition_call_europeen(S0, K, T, r, sigma, n_steps, n_paths):
    traj = simuler_gbm(S0, r, sigma, T, n_steps, n_paths)
    exposition = np.maximum(traj - K, 0)
    return exposition

def calculer_cva(exposition, probabilite_defaut, taux_recouvrement=0.4, facteur_actualisation=None):
    n_paths, n_temps = exposition.shape
    if facteur_actualisation is None:
        facteur_actualisation = np.ones(n_temps)
    EE = exposition.mean(axis=0)
    LGD = 1 - taux_recouvrement
    cva = LGD * np.sum(EE[1:] * probabilite_defaut * facteur_actualisation[1:])
    return cva

def calculer_cva_simple(S0, K, T, r, sigma, spread_cds, n_steps=50, n_paths=10000):
    expo = exposition_call_europeen(S0, K, T, r, sigma, n_steps, n_paths)
    lambda_def = spread_cds / (1 - 0.4)
    dt = T / n_steps
    t = np.arange(0, T, dt)
    proba_def_marg = np.exp(-lambda_def * t) * (1 - np.exp(-lambda_def * dt))
    df = np.exp(-r * np.linspace(0, T, n_steps+1))
    cva = calculer_cva(expo, proba_def_marg, 0.4, df)
    return cva

# %% Paramètres
S0 = 100
K = 100
T = 1.0
r = 0.02
sigma = 0.2
spread_cds = 0.01  # 100 points de base
n_steps = 20
n_paths = 5000

# %% Calcul CVA
cva = calculer_cva_simple(S0, K, T, r, sigma, spread_cds, n_steps, n_paths)
print(f"CVA estimée : {cva:.6f}")

# %% Calcul Delta de la CVA
def cva_delta(S0, K, T, r, sigma, spread_cds, eps=0.01, n_steps=20, n_paths=5000):
    cva0 = calculer_cva_simple(S0, K, T, r, sigma, spread_cds, n_steps, n_paths)
    cva_up = calculer_cva_simple(S0+eps, K, T, r, sigma, spread_cds, n_steps, n_paths)
    cva_down = calculer_cva_simple(S0-eps, K, T, r, sigma, spread_cds, n_steps, n_paths)
    return (cva_up - cva_down) / (2*eps)

delta_cva = cva_delta(S0, K, T, r, sigma, spread_cds, eps=0.5, n_steps=n_steps, n_paths=n_paths)
print(f"Delta de la CVA : {delta_cva:.6f}")

# %% Vega de la CVA
def cva_vega(S0, K, T, r, sigma, spread_cds, eps=0.001, n_steps=20, n_paths=5000):
    cva0 = calculer_cva_simple(S0, K, T, r, sigma, spread_cds, n_steps, n_paths)
    cva_up = calculer_cva_simple(S0, K, T, r, sigma+eps, spread_cds, n_steps, n_paths)
    return (cva_up - cva0) / eps

vega_cva = cva_vega(S0, K, T, r, sigma, spread_cds, eps=0.005, n_steps=n_steps, n_paths=n_paths)
print(f"Vega de la CVA : {vega_cva:.6f}")

# %% Agrégation pour un portefeuille (2 calls identiques)
cva_total = 2 * cva
delta_total = 2 * delta_cva
vega_total = 2 * vega_cva
print(f"\nCVA totale du portefeuille : {cva_total:.6f}")
print(f"Delta total CVA : {delta_total:.6f}")
print(f"Vega total CVA  : {vega_total:.6f}")

# %% Visualisation de l'exposition attendue
expo = exposition_call_europeen(S0, K, T, r, sigma, n_steps, n_paths)
EE = expo.mean(axis=0)
temps = np.linspace(0, T, n_steps+1)
plt.figure(figsize=(10,5))
plt.plot(temps, EE, marker='o')
plt.xlabel('Temps (années)')
plt.ylabel('Exposition attendue')
plt.title('Expected Exposure (EE)')
plt.grid(True)
plt.show()
